{
	"private": true,
	"type": "module",
	"files": [],
	"scripts": {
		"prepare": "simple-git-hooks",
		"lint": "npm run lint:js; npm run lint:css",
		"lint:js": "eslint --cache .",
		"lint:css": "stylelint --cache './src/**/*.{css,vue}'",
		"dev": "vite --open --port 3000",
		"build": "NODE_ENV=production vite-ssg build",
		"preview": "vite preview --port 3000"
	},
	"simple-git-hooks": {
		"pre-commit": "pnpm lint-staged"
	},
	"lint-staged": {
		"*.{js,ts,vue,md}": "eslint --cache",
		"*.{css,vue}": "stylelint --cache"
	},
	"engines": {
		"node": "18.16.0"
	},
	"devDependencies": {
		"@iconify/json": "^2.2.58",
		"@nodesecure/npm-registry-sdk": "^1.5.2",
		"@octokit/graphql": "^5.0.5",
		"@popperjs/core": "^2.11.7",
		"@pvtnbr/eslint-config": "^0.34.0",
		"@sindresorhus/slugify": "^2.2.0",
		"@types/markdown-it": "^12.2.3",
		"@types/node": "^18.16.3",
		"@types/nprogress": "^0.2.0",
		"@vercel/analytics": "^1.0.0",
		"@vitejs/plugin-vue": "^4.2.1",
		"@vueuse/core": "^10.1.0",
		"@vueuse/head": "^1.1.26",
		"autoprefixer": "^10.4.14",
		"cleye": "^1.3.2",
		"code-tag": "^1.1.0",
		"eslint": "^8.45.0",
		"feed": "^4.2.2",
		"gray-matter": "^4.0.3",
		"lint-staged": "^13.2.3",
		"markdown-it": "^13.0.1",
		"markdown-it-anchor": "^8.6.7",
		"markdown-it-shiki": "^0.8.1",
		"nprogress": "^0.2.0",
		"postcss": "^8.4.27",
		"postcss-html": "^1.5.0",
		"simple-git-hooks": "^2.8.1",
		"stylelint": "^15.6.0",
		"stylelint-config-recommended-vue": "^1.4.0",
		"stylelint-config-standard": "^33.0.0",
		"tailwindcss": "^3.3.3",
		"tsx": "^3.12.7",
		"typescript": "^5.0.4",
		"unplugin-auto-import": "^0.15.3",
		"unplugin-icons": "^0.16.1",
		"unplugin-vue-components": "^0.24.1",
		"vite": "^4.3.9",
		"vite-plugin-pages": "^0.29.1",
		"vite-plugin-vue-markdown": "^0.22.6",
		"vite-ssg": "^0.22.2",
		"vite-ssg-sitemap": "^0.5.1",
		"vue": "^3.3.4",
		"vue-router": "^4.2.2"
	},
	"eslintConfig": {
		"extends": "@pvtnbr",
		"ignorePatterns": [
			"**/@types/unplugin-*.d.ts"
		]
	},
	"stylelint": {
		"extends": [
			"stylelint-config-standard",
			"stylelint-config-recommended-vue"
		],
		"rules": {
			"indentation": "tab",
			"at-rule-no-unknown": [
				true,
				{
					"ignoreAtRules": [
						"tailwind"
					]
				}
			]
		}
	}
}
