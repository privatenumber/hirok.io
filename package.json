{
	"private": true,
	"type": "module",
	"files": [],
	"scripts": {
		"prepare": "simple-git-hooks",
		"lint": "npm run lint:js; npm run lint:css",
		"lint:js": "eslint --cache .",
		"lint:css": "stylelint --cache './src/**/*.{css,vue}'",
		"dev": "vite --open --port 3000",
		"build": "NODE_ENV=production vite-ssg build",
		"preview": "vite preview --port 3000"
	},
	"simple-git-hooks": {
		"pre-commit": "pnpm lint-staged"
	},
	"lint-staged": {
		"*.{js,ts,vue,md}": "eslint --cache",
		"*.{css,vue}": "stylelint --cache"
	},
	"devDependencies": {
		"@iconify/json": "^2.2.141",
		"@nodesecure/npm-registry-sdk": "^1.6.1",
		"@octokit/graphql": "^7.0.2",
		"@popperjs/core": "^2.11.8",
		"@pvtnbr/eslint-config": "^0.37.1",
		"@sindresorhus/slugify": "^2.2.1",
		"@types/markdown-it": "^13.0.6",
		"@types/node": "^20.9.0",
		"@types/nprogress": "^0.2.3",
		"@vercel/analytics": "^1.1.1",
		"@vitejs/plugin-vue": "^4.4.1",
		"@vueuse/core": "^10.6.1",
		"@vueuse/head": "^2.0.0",
		"autoprefixer": "^10.4.16",
		"cleye": "^1.3.2",
		"code-tag": "^1.1.0",
		"cssnano": "^6.0.1",
		"eslint": "^8.53.0",
		"feed": "^4.2.2",
		"gray-matter": "^4.0.3",
		"lint-staged": "^15.1.0",
		"markdown-it": "^13.0.2",
		"markdown-it-anchor": "^8.6.7",
		"markdown-it-shiki": "^0.9.0",
		"nprogress": "^0.2.0",
		"postcss": "^8.4.31",
		"postcss-html": "^1.5.0",
		"simple-git-hooks": "^2.9.0",
		"stylelint": "^15.11.0",
		"stylelint-config-recommended-vue": "^1.5.0",
		"stylelint-config-standard": "^34.0.0",
		"tailwindcss": "^3.3.5",
		"tsx": "^4.1.2",
		"typescript": "^5.2.2",
		"unplugin-auto-import": "^0.16.7",
		"unplugin-icons": "^0.17.4",
		"unplugin-vue-components": "^0.25.2",
		"vite": "^4.5.0",
		"vite-plugin-pages": "^0.31.0",
		"vite-plugin-vue-markdown": "^0.23.8",
		"vite-ssg": "^0.23.5",
		"vite-ssg-sitemap": "^0.6.0",
		"vue": "^3.3.8",
		"vue-router": "^4.2.5"
	},
	"eslintConfig": {
		"extends": "@pvtnbr",
		"ignorePatterns": [
			"**/@types/unplugin-*.d.ts"
		]
	},
	"stylelint": {
		"extends": [
			"stylelint-config-standard",
			"stylelint-config-recommended-vue"
		],
		"rules": {
			"indentation": "tab",
			"at-rule-no-unknown": [
				true,
				{
					"ignoreAtRules": [
						"tailwind"
					]
				}
			]
		}
	}
}
