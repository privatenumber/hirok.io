{
	"private": true,
	"files": [],
	"type": "module",
	"scripts": {
		"prepare": "simple-git-hooks",
		"lint": "npm run lint:js; npm run lint:css",
		"lint:js": "lint --cache --ignore-pattern '**/@types/unplugin-*.d.ts' .",
		"lint:css": "stylelint --cache './src/**/*.{css,vue}'",
		"dev": "vite --open --port 3000",
		"build": "NODE_ENV=production vite-ssg build",
		"preview": "vite preview --port 3000"
	},
	"simple-git-hooks": {
		"pre-commit": "pnpm lint-staged"
	},
	"lint-staged": {
		"*.{js,ts,vue,md}": "eslint --cache",
		"*.{css,vue}": "stylelint --cache"
	},
	"engines": {
		"node": "20"
	},
	"devDependencies": {
		"@iconify/json": "^2.2.196",
		"@nodesecure/npm-registry-sdk": "^2.1.1",
		"@octokit/graphql": "^8.0.1",
		"@popperjs/core": "^2.11.8",
		"@pvtnbr/eslint-config": "^1.1.0",
		"@sindresorhus/slugify": "^2.2.1",
		"@types/markdown-it": "^13.0.7",
		"@types/node": "^20.11.30",
		"@types/nprogress": "^0.2.3",
		"@vercel/analytics": "^1.2.2",
		"@vitejs/plugin-vue": "^5.0.4",
		"@vueuse/core": "^10.9.0",
		"@vueuse/head": "^2.0.0",
		"autoprefixer": "^10.4.19",
		"cleye": "^1.3.2",
		"code-tag": "^1.2.0",
		"cssnano": "^6.1.1",
		"eslint": "^8.57.0",
		"feed": "^4.2.2",
		"gray-matter": "^4.0.3",
		"lint-staged": "^15.2.2",
		"markdown-it": "^14.1.0",
		"markdown-it-anchor": "^8.6.7",
		"markdown-it-shiki": "^0.9.0",
		"nprogress": "^0.2.0",
		"postcss": "^8.4.38",
		"postcss-html": "^1.6.0",
		"simple-git-hooks": "^2.11.0",
		"stylelint": "^16.3.0",
		"stylelint-config-standard": "^36.0.0",
		"tailwindcss": "^3.4.1",
		"tsx": "^4.7.1",
		"typescript": "^5.4.3",
		"unplugin-auto-import": "^0.17.5",
		"unplugin-icons": "^0.18.5",
		"unplugin-vue-components": "^0.26.0",
		"vite": "^5.2.6",
		"vite-plugin-pages": "^0.32.0",
		"vite-plugin-vue-markdown": "^0.23.8",
		"vite-ssg": "^0.23.6",
		"vite-ssg-sitemap": "^0.6.1",
		"vue": "^3.4.21",
		"vue-router": "^4.3.0"
	},
	"stylelint": {
		"extends": "stylelint-config-standard",
		"customSyntax": "postcss-html",
		"rules": {
			"at-rule-no-unknown": [
				true,
				{
					"ignoreAtRules": [
						"tailwind"
					]
				}
			],
			"selector-pseudo-class-no-unknown": [
				true,
				{
					"ignorePseudoClasses": [
						"deep"
					]
				}
			]
		}
	}
}
