{
	"private": true,
	"type": "module",
	"files": [],
	"scripts": {
		"prepare": "simple-git-hooks",
		"lint": "npm run lint:js; npm run lint:css",
		"lint:js": "eslint --cache .",
		"lint:css": "stylelint --cache './src/**/*.{css,vue}'",
		"dev": "vite --open --port 3000",
		"build": "vite-ssg build",
		"preview": "sirv dist --port 3000"
	},
	"simple-git-hooks": {
		"pre-commit": "pnpm lint-staged"
	},
	"lint-staged": {
		"*.{js,ts,vue,md}": "eslint --cache",
		"*.{css,vue}": "stylelint --cache"
	},
	"devDependencies": {
		"@iconify/json": "^2.2.26",
		"@nodesecure/npm-registry-sdk": "^1.5.1",
		"@pvtnbr/eslint-config": "^0.33.0",
		"@sindresorhus/slugify": "^2.2.0",
		"@types/markdown-it-link-attributes": "^3.0.1",
		"@types/node": "^18.14.0",
		"@types/nprogress": "^0.2.0",
		"@unocss/preset-uno": "^0.49.7",
		"@unocss/reset": "^0.49.7",
		"@unocss/transformer-directives": "^0.49.7",
		"@unocss/vite": "^0.49.7",
		"@vitejs/plugin-vue": "^4.0.0",
		"@vueuse/core": "^9.13.0",
		"@vueuse/head": "^1.0.26",
		"eslint": "^8.34.0",
		"feed": "^4.2.2",
		"gray-matter": "^4.0.3",
		"lint-staged": "^13.1.2",
		"markdown-it": "^13.0.1",
		"markdown-it-anchor": "^8.6.7",
		"markdown-it-link-attributes": "^4.0.1",
		"markdown-it-shiki": "^0.8.0",
		"nprogress": "^0.2.0",
		"postcss-html": "^1.5.0",
		"simple-git-hooks": "^2.8.1",
		"sirv-cli": "^2.0.2",
		"stylelint": "^15.2.0",
		"stylelint-config-recommended-vue": "^1.4.0",
		"stylelint-config-standard": "^30.0.1",
		"tsx": "^3.12.3",
		"typescript": "^4.9.5",
		"unocss": "^0.49.7",
		"unplugin-auto-import": "^0.14.4",
		"unplugin-icons": "^0.15.3",
		"unplugin-vue-components": "^0.24.0",
		"vite": "^4.1.4",
		"vite-plugin-pages": "^0.28.0",
		"vite-plugin-vue-markdown": "^0.22.4",
		"vite-ssg": "^0.22.1",
		"vite-ssg-sitemap": "^0.4.3",
		"vue": "^3.2.47",
		"vue-router": "^4.1.6",
		"vue3-popper": "^1.5.0"
	},
	"eslintConfig": {
		"extends": "@pvtnbr",
		"ignorePatterns": [
			"**/@types/unplugin-*.d.ts"
		]
	},
	"stylelint": {
		"extends": [
			"stylelint-config-standard",
			"stylelint-config-recommended-vue"
		],
		"rules": {
			"indentation": "tab"
		}
	}
}
